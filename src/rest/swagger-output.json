{
  "openapi": "3.0.0",
  "info": {
    "title": "AetioMed API",
    "description": "API Documentation",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3030/"
    }
  ],
  "tags": [
    {
      "name": "Cases",
      "description": "Cases endpoints"
    }
  ],
  "paths": {
    "/api/hello": {
      "get": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/cases/": {
      "post": {
        "tags": ["Cases"],
        "description": "",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CaseGenerationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CaseGenerationRequest"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CaseGenerationRequest": {
        "type": "object",
        "properties": {
          "icd": {
            "description": "ICD-10 code of the disease to generate a case for",
            "type": "string",
            "format": "icd",
            "pattern": "([A-Z][0-9]{2})(\\.[0-9]{1,4})?"
          },
          "diagnosis": {
            "description": "Name of the disease diagnosis",
            "type": "string"
          },
          "context": {
            "description": "Additional context for case generation",
            "type": "string"
          },
          "generationFlags": {
            "description": "Generation flags to specify case fields to generate",
            "default": ["chiefComplaint", "anamnesis"],
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["chiefComplaint", "anamnesis"]
            }
          },
          "language": {
            "description": "Language to generate the case in",
            "type": "string",
            "enum": ["English", "German"]
          }
        },
        "required": ["generationFlags"],
        "additionalProperties": false
      },
      "CaseGenerationResponse": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "chiefComplaint": {
                "description": "The chief complaint of the patient",
                "type": "string"
              },
              "anamnesis": {
                "description": "Medical history collected from patient",
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "category": {
                      "anyOf": [
                        {
                          "type": "string",
                          "enum": [
                            "History of Present Illness",
                            "Past Medical History",
                            "Medications",
                            "Allergies",
                            "Family History",
                            "Cardiovascular Risk Factors",
                            "Social and Occupational History"
                          ]
                        },
                        {
                          "type": "string",
                          "enum": [
                            "Krankheitsverlauf",
                            "Vorerkrankungen",
                            "Medikamente",
                            "Allergien",
                            "Familienanamnese",
                            "Kardiovaskul√§re Risikofaktoren",
                            "Sozial-/Berufsanamnese"
                          ]
                        }
                      ]
                    },
                    "answer": {
                      "description": "Patient's response or clinical finding",
                      "type": "string"
                    }
                  },
                  "required": ["category", "answer"],
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "error": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "string"
                  },
                  "message": {
                    "type": "string"
                  },
                  "details": {
                    "type": "string"
                  }
                },
                "required": ["code", "message"],
                "additionalProperties": false
              }
            },
            "required": ["error"],
            "additionalProperties": false
          }
        ]
      }
    }
  }
}
